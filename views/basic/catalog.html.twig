{% if is_ajax == false %}
  {% extends "basic/layout.html.twig" %}
  {% block title %}{% endblock %}
  {% block description %}{% endblock %}
{% endif %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-12" style="padding-left: 0;">
      <div id="custom-search-input">
        <form action="/catalog" method="GET">
          <div class="input-group col-md-12">
            <input type="text" class="form-control input-lg" name="query" value="{{ query }}" placeholder="Search items.." />
            <span class="input-group-btn">
              <button class="btn btn-info btn-lg" type="button">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-2" style="padding-left: 0;">

      {#sorting not available yet#}
      {#<h5 style="margin-bottom: 5px;"><strong style="color: #337ab7;">Sort by</strong></h5>

      {% for key, val in sortings %}
      <div class="radio">
        <label>
          <input type="radio" {% if key == sort %}checked{% endif %} name="sortOptions" value="option_{{ key }}">
          {{ key }}
        </label>
      </div>
      {% endfor %}#}

      {% for val, key in aggregations %}
      <div class="">
        <h5 style="margin-bottom: 5px;"><strong style="color: #337ab7;">{{ aggregations[val].title }}</strong></h5>
        <ul class="browse-list list-unstyled long-list" style="margin-bottom: 0;">
          {% for term in aggregations[val].buckets %}
          <li ng-repeat="bucket in agg.buckets">
          <div class="checkbox block" style="margin-top: 0; margin-bottom: 0;">
            <label>
              <input class="checkbox" type="checkbox" {% if (filter and filter.val == term.key and filter.key == val) or in_array(term.key, filters[val]) %}checked="checked"{% endif %} onclick="onAggregationClick(this, '{{aggregations[val].name}}', '{{ term.key }}');">
              {{ term.key }} ({{ term.doc_count }})
            </label>
          </div>
          </li>
          {% endfor %}
        </ul>

        {% if aggregations[val].type == 'terms' %}
          <p class=""><a href="/category/{{ aggregations[val].name }}">See all</a></p>
        {% endif %}
        <div class="clearfix"></div>
      </div>
      {% endfor %}

    </div>
    <div class="col-md-10">

      <div class="breadcrumbs">
        {% for key, val in filters %}
        {% for term in val %}
        <span class="label label-default" style="margin-left: 5px;">{{ term }}
          <span onclick="removeFilter('{{ key }}', '{{ term }}');" style="cursor: pointer" class="glyphicon glyphicon-remove"></span>
        </span>
        {% endfor %}
        {% endfor %}

        {% if (query) %}
        <span class="label label-default" style="margin-left: 5px;">{{ query }}
        </span>
        {% endif %}

        {% if (filter) %}
        <span class="label label-default" style="margin-left: 5px;">{{ filter.val }}
          <span onclick="removeFilter('{{ filter.key }}', '{{ filter.val }}');" style="cursor: pointer" class="glyphicon glyphicon-remove"></span>
        </span>
        {% endif %}
      </div>

      <div class="clearfix"></div>

      <h3>List of items ({{pagination.total}})</h3>

      <div class="items">
        {% for item in items %}
        <div class="col-xs-3 col-md-3" style="height: 350px;">
          <a href="/item/{{ item.id }}" class="">
            <img class="img-thumbnail" src="{% if item.image %}{{ item.image }}{% else %}{{ image }} {% endif %}" alt="{{ item.name }}">
            <p>{{ item.name }}</p>
          </a>
        </div>
        {% endfor %}
      </div>

      <div class="clearfix"></div>

      {% if hints %}
        <p class="bg-success" style="padding: 15px;">To change this layout go to: <strong>/views/catalog.html.twig</strong></p>
      {% endif %}


      <div class="pagination-bar text-center">
        <ul class="pagination">
          {% set pages_count = ((pagination.total | int) / (pagination.per_page | int)) | ceil  %}
          {% if pages_count > 8 %}
          {% set pages_count = 8 %}
          {% endif %}
          {% for pag in range(1, pages_count + 1) %}
          <li {% if (not page and pag == 1) or pag == page %}class="active"{% endif %}><a href="{{ url | build({page: pag}) }}">{{ pag }}</a></li>
          {% endfor %}
          {% set next = page + 1 %}
          <li><a class="pagination-btn" href="/catalog?page={{ page + 1 }}">Next &raquo;</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

{% endblock %}
