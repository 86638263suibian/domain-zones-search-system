{% extends "basic/layout.html.twig" %}

{% block content %}
<div class="main-container">
  <div class="container" style="padding-left: 0">
    <ol class="breadcrumb pull-left">
      {#<li><a href="/"><i class="icon-home fa"></i></a></li>#}
      <li><a href="/">Homepage</a></li>
      <li><a href="/catalog">all items</a></li>
      <li class="active">{{ item.name }}</li>
    </ol>
    <div class="pull-right">
      <a href="/catalog" class="previous-page">
        {#<i class="fa fa-angle-double-left"></i> Back to results#}
        <i class="fa fa-angle-double-left"></i> Previous page
      </a>
    </div>
  </div>
  <div class="container" style="padding-left: 0">
    <div class="row">

      <div class="col-sm-4">
        <aside>
          <div class="panel sidebar-panel">
            <div class="">
              <div class="panel-body text-center">
                <div class="">
                  <img src="https://statistics.domain-db.com/assets/images/www.png" alt="{{ item.name }}" style="width: 300px" />
                </div>
              </div>
            </div>
          </div>
        </aside>
      </div>



      <div class="col-sm-8">
        <div class="">
          <span class="" style="margin-bottom: 0;">
          </span>

          <div class="">
            <div class="row">
              <div class="col-md-12">
                <table class="table table-striped">
                  <tbody>
                   {% for key, val in item %}
                  <tr>
                    <td><b>{{ key }}</b></td>
                    <td>
                      {{ val }}
                    </td>
                    <td>
                    </td>
                  </tr>
                  {% endfor %}


                  </tbody>
                </table>

                {% if settings.hints %}
                <p class="bg-success" style="padding: 15px;">To change this layout go to: <strong>/views/item.html.twig</strong></p>
                {% endif %}


                <hr class="clearfix" />


            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


{% endblock %}

{% block before_body_end %}
  <script>
    $('.show-info').popover({
      delay: 300,
      placement: 'bottom',
      trigger: 'hover'
    })
  </script>
{% endblock %}
